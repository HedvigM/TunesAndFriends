// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  createdAt      DateTime        @default(now())
  name           String
  auth0UserId    String          @unique
  email          String          @unique
  town           String?
  profileText    String?
  picture        String?
  savedTunes     Tune[]          @relation("savedTunes")
  tags           Tag[]           @relation("usersTags")
  taggings       Tagging[]       @relation("taggings")
  userTunes      UserTune[]      @relation("userTunes")
  knowTunes      Tune[]          @relation("knowTunes")
  starredTunes   Tune[]          @relation("starredTunes")
  following      User[]          @relation("follows")
  followedBy     User[]          @relation("follows")
  userPreference UserPreference?
  role           Role            @default(BASIC)

  @@map("users")
}

model UserPreference {
  id           Int     @id @default(autoincrement())
  emailUpdates Boolean
  user         User    @relation(fields: [userId], references: [id])
  userId       Int     @unique
}

enum Role {
  BASIC
  ADMIN
}

model Tune {
  id        Int        @id @default(autoincrement())
  sessionId Int        @unique
  savedBy   User[]     @relation("savedTunes")
  tags      Tag[]      @relation("tags")
  taggings  Tagging[]  @relation("taggings")
  knowedBy  User[]     @relation("knowTunes")
  starredBy User[]     @relation("starredTunes")
  userTunes UserTune[] @relation("userTunes")
}

model UserTune {
  id     Int  @id @default(autoincrement())
  user   User @relation("userTunes", fields: [userId], references: [id])
  userId Int
  tune   Tune @relation("userTunes", fields: [tuneId], references: [id])
  tuneId Int
  tag    Tag  @relation("userTunes", fields: [tagId], references: [id])
  tagId  Int

  @@unique([userId, tuneId])
}

model Tag {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  usersTags User[]     @relation("usersTags")
  tunes     Tune[]     @relation("tags")
  taggings  Tagging[]  @relation("taggings")
  userTunes UserTune[] @relation("userTunes")
}

model Tagging {
  id     Int  @id @default(autoincrement())
  userId Int
  tuneId Int
  tagId  Int
  user   User @relation("taggings", fields: [userId], references: [id])
  tune   Tune @relation("taggings", fields: [tuneId], references: [id])
  tag    Tag  @relation("taggings", fields: [tagId], references: [id])

  @@unique([userId, tuneId, tagId])
}
