generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  auth0UserId String?  @unique @map("auth0_user_id")
  email       String   @unique
  town        String?
  profileText String?
  knowTunes   Tune[]   @relation("knowTunes")
  learnTunes  Tune[]   @relation("learnTunes")

  @@map("users")
}

model Tune {
  id        Int    @id @default(autoincrement())
  sessionId Int    @unique
  knowedBy  User[] @relation("knowTunes")
  staredBy  User[] @relation("learnTunes")
}

