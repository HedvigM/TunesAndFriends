generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  auth0UserId String?  @unique @map("auth0_user_id")
  email       String   @unique
  town        String?
  profileText String?
  knowTunes   Int?
  learnTunes  Int?

  @@map("users")
}

